<div>
  <div>
    <img src='<%= @user.photo %>' alt='User profile photo' width='150' height='200'/>
    <div>
      <p><%= @user.name %></p>
      <small>Number of posts: <%= @user.posts_counter %></small>
    </div>
  </div>
  <div><%= @user.bio %></div>
  <% @user.posts.each do |post| %>
    <div>
      <h3><%= post.title %></h3>
      <p><%= post.text %></p>
      <small>Comments:<%= post.comments_counter %>, Likes:<%= post.likes_counter %></small>
      </div>
    <div>
  <% end %>
</div>
