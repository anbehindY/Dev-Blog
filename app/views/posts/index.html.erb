<div class='template'>
  <div class='user-container'>
    <img src="<%= @user.photo%>" class='user-img' />
    <div class='user-div'>
      <h2><%= @user.name %></h2>
      <small class='posts_counter'>Number of posts: <%= @user.posts_counter %></small>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class='post-container'>
      <div>
        <h3><%= link_to post.title, user_post_url(@user, post) %></h3>
        <p><%= post.text %></p>
        <small>Comments:<%= post.comments_counter %>, Likes:<%= post.likes_counter %></small>
      </div>
      <div class='recent_comments'>
        <% post.recent_comments.each do |comment| %>
          <p><%= comment.author.name%>:<%= comment.text%></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
